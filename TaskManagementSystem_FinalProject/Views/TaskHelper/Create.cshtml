@model TaskManagementSystem_FinalProject.Models.AppTask

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>AppTask</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
               <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
               <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
               
                <input asp-for="CompletePercentage" class="form-control" type="hidden" />
                <span asp-validation-for="CompletePercentage" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <input asp-for="Comment" class="form-control" type="hidden" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div>Project Name</div>
                <select asp-for="ProjectId" class ="form-control" asp-items="ViewBag.ProjectId"></select>
            </div>
            <div class="form-group">
                <div>User Name</div>
                <select asp-for="AppUserId" class ="form-control" asp-items="ViewBag.AppUserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DeadLine" class="control-label"></label>
                <input asp-for="DeadLine" type="date" class ="form-control" asp-items="ViewBag.AppUserId"></input>
            </div>
            
                
                <input asp-for="CompletePercentage" value=@ViewBag.Zero type="hidden"></input>
           
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

